{
  "name": "logicate",
  "private": true,
  "scripts": {
    "postinstall": "turbo db:generate --filter=@logicate/database",
    "dev": "turbo dev --filter=@logicate/web",
    "dev:emails": "dotenv turbo dev --filter=@logicate/emails",
    "dev:landing": "turbo dev --filter=@logicate/landing --filter=@logicate/web",
    "start": "dotenv turbo start --filter=@logicate/landing",
    "build": "dotenv turbo run build --filter=@logicate/landing",
    "build:test": "turbo build:test",
    "db:deploy": "turbo db:deploy",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:reset": "turbo db:reset",
    "db:push": "dotenv turbo db:push --filter=@logicate/database",
    "db:seed": "dotenv turbo db:seed --filter=@logicate/database",
    "lint": "turbo lint",
    "test:integration": "turbo test:integration",
    "test:unit": "turbo test:unit",
    "type-check": "turbo type-check",
    "prettier": "prettier --write .",
    "release": "./scripts/create-release.sh"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "framer-motion": "^11.5.4",
    "next": "^14.2.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@pierre/recipes": "^0.0.8",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "npm-run-all": "^4.1.5",
    "pierre": "^2.1.9",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "3.2.4",
    "prettier-plugin-packagejson": "2.5.2",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-sort-json": "^4.0.0",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.10",
    "turbo": "^2.1.1"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": "20.x"
  },
  "prisma": {
    "seed": "pnpm --filter @logicate/database db:seed"
  }
}