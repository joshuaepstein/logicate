{
  "extends": "@logicate/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["public/*"]
    },
    "strictNullChecks": true,
    "target": "ES2020"
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next/**/*"]
}
