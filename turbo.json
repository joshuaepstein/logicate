{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env"
  ],
  "tasks": {
    "build": {
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "@logicate/web#build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**"
      ]
    },
    "@logicate/landing#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**"
      ]
    },
    "test": {
      "inputs": [
        "src/**/*",
        "tests/**/*"
      ],
      "env": [
        "CI"
      ],
      "dependsOn": [
        "^build:test"
      ]
    },
    "test:unit": {
      "cache": true
    },
    "test:integration": {
      "inputs": [
        "playwright.config.ts",
        ".env.test",
        "src/**/*",
        "tests/**/*"
      ],
      "cache": true
    },
    "db:generate": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "@logicate/web#start": {
      "cache": false,
      "persistent": true
    },
    "@logicate/landing#start": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "SECRET_PASSWORD",
    "NEXT_PUBLIC_*",
    "SUPPORT_EMAIL"
  ]
}
